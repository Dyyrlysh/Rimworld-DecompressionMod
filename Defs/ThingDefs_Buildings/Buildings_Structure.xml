<Defs>
  <ThingDef ParentName="Wall">
    <defName>StationWall</defName>
    <label>station wall</label>
    <description>A paneled, airtight wall suitable for orbital stations.</description>
    <designationCategory>Odyssey</designationCategory>
    <uiOrder>1800</uiOrder>
    <uiIconPath>Things/Building/Linked/StationWall/StationWall_MenuIcon</uiIconPath>
    <graphicData>
      <texPath>Things/Building/Linked/StationWall/StationWall_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(239,241,241)</color>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>300</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <costList>
      <GravlitePanel>1</GravlitePanel>
      <Steel>7</Steel>
    </costList>
    <costStuffCount>0</costStuffCount>
    <building>
      <paintable>true</paintable>
      <isAirtight>true</isAirtight>
      <deconstructible>true</deconstructible>
      <isEdifice>true</isEdifice>
    </building>
    <useStuffTerrainAffordance>false</useStuffTerrainAffordance>
    <stuffCategories Inherit="False"/>
  </ThingDef>
</Defs>

