<?xml version="1.0" encoding="utf-8" ?>

<Defs>
 <HediffDef>
    <defName>DecompressionInjury</defName>
    <label>decompression trauma</label>
    <description>Various afflictions caused by a rapid change in air pressure. Usually occurs from pressurized environments being breached.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <lethalSeverity>1.0</lethalSeverity>
    <makesSickThought>true</makesSickThought>
    <tendable>true</tendable>
    <isBad>true</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.5</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
      <li Class="HediffCompProperties_TendDuration">
        <baseTendDurationHours>24</baseTendDurationHours>
        <severityPerDayTended>-0.15</severityPerDayTended>
      </li>
    </comps>
    <stages>
            <li>
                <minSeverity>0.01</minSeverity>
                <label>Minor</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.05</offset>
                    </li>
                    <li>
                        <capacity>Talking</capacity>
                        <offset>-0.06</offset>
                    </li>
                </capMods>
                <painFactor>0.1</painFactor>
            </li>
            <li>
                <minSeverity>0.4</minSeverity>
                <label>Moderate</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.13</offset>
                    </li>
                    <li>
                        <capacity>Talking</capacity>
                        <offset>-0.1</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.07</offset>
                    </li>
                </capMods>
                <painFactor>0.15</painFactor>
            </li>
            <li>
                <minSeverity>0.7</minSeverity>
                <label>Major</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.22</offset>
                    </li>
                    <li>
                        <capacity>Talking</capacity>
                        <offset>-0.14</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.15</offset>
                    </li>
                </capMods>
                <painFactor>0.3</painFactor>
            </li>
            <li>
                <minSeverity>0.85</minSeverity>
                <label>Critical</label>
                <lifeThreatening>true</lifeThreatening>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.37</offset>
                    </li>
                    <li>
                        <capacity>Talking</capacity>
                        <offset>-0.23</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.3</offset>
                    </li>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>-0.06</offset>
                    </li>
                </capMods>
                <painFactor>0.42</painFactor>
            </li>
        </stages>
 </HediffDef>

 <!-- Asphyxiation Hediff -->
  <HediffDef>
    <defName>Asphyxiation</defName>
    <label>asphyxia</label>
    <description>Condition in which the body begins to malfunction due to a severe lack of oxygen supply. If not relieved quickly, the creature will fall unconscious and eventually die.</description>
    <hediffClass>DecompressionMod.Hediff_Asphyxiation</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.2)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>true</isBad>
    <tendable>false</tendable>
    <everCurableByItem>false</everCurableByItem>
    <stages>
      <li>
        <label>mild</label>
        <lifeThreatening>true</lifeThreatening>
        <minSeverity>0</minSeverity>
        <painOffset>0.05</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.08</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <postFactor>0.5</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
                <lifeThreatening>true</lifeThreatening>
        <minSeverity>0.25</minSeverity>
        <painOffset>0.10</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.14</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.4</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <postFactor>0.4</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <label>severe</label>
                <lifeThreatening>true</lifeThreatening>
        <minSeverity>0.50</minSeverity>
        <painOffset>0.20</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <postFactor>0.3</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
                <lifeThreatening>true</lifeThreatening>
        <minSeverity>0.75</minSeverity>
        <painOffset>0.35</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.26</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.6</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <postFactor>0.2</postFactor>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <!-- Hypoxic Coma Hediff -->
  <HediffDef>
    <defName>HypoxicComa</defName>
    <label>hypoxic coma</label>
    <description>Anoxically-induced coma. If this creature does not receive oxygen soon, their body will shut down and their brain will die.</description>
    <hediffClass>DecompressionMod.Hediff_HypoxicComa</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.2)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <lethalSeverity>1.0</lethalSeverity>
    <isBad>true</isBad>
    <tendable>false</tendable>
    <everCurableByItem>false</everCurableByItem>
    <stages>
      <li>
        <label>unconscious</label>
        <minSeverity>0</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0</setMax>
          </li>
            <li>
            <capacity>Breathing</capacity>
            <postFactor>0.1</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <label>dying</label>
        <minSeverity>0.5</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.20</offset>
          </li>
            <li>
            <capacity>Breathing</capacity>
            <postFactor>0.01</postFactor>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>
    
